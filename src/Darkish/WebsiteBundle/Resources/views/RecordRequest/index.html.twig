{% extends 'DarkishWebsiteBundle:Default:RegisterCustomer/register-customer.html.twig' %}

{% block main %}
    <h1>RecordRequest list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Phone</th>
                <th>Unitname</th>
                <th>Email</th>
                <th>Created</th>
                <th>Status</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.fullName }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.unitName }}</td>
                <td>{{ entity.email }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.description }}</td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('request_record_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
