{% if festival.text is defined and festival.text %}
<h3 class="{{ festival.text_class }}">
    جشنواره ها
</h3>
{% endif %}

{% if festival.sub_text is defined and festival.sub_text %}
    <h4 class="{{ festival.sub_text_class }}">
        جشنواره ها
    </h4>
{% endif %}

<div class="row">
    {% for item in items %}
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 {{ festival.card_class }}">
        	<a href="{{ url('website_record_single', {"record": item.recordNumber}) }}">
                <div class="thumbnail">
                    {% if item.images|length > 0 %}
                    <img class="{{ festival.card_icon_class }}" src="{{ item.images.0.relativePath | imagine_filter('512') }}" alt="">
                    {% endif %}
                    <div class="caption">
                        <h4 class="{{ festival.card_text_class }}">{{ item.title }}</h4>
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>